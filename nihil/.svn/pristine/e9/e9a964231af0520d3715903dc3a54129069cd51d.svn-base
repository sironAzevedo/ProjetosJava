<div class="row">
    <div class="pull-right">
        <a ng-href="#/empresa/edit/0" >
            <button class="btn btn-success btn-sm"><i class="glyphicon glyphicon-plus-sign"></i>
            </button>
        </a>
    </div>
</div>
<div class="row">
    <table class="table table-striped table-hover">
        <thead>
            <tr class="info">
                <th>Nome</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="empresa in model.empresas" ng-class-odd="'active'" ng-class-even="''" ng-click="">
                <td>{{empresa.nome}}</td>
                <td><a class="pull-right" ng-href="#/empresa/edit/{{empresa.id}}"><i class="glyphicon glyphicon-edit"></i></a></td>
            </tr>

        </tbody>
    </table> 
</div>