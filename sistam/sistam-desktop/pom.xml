<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>br.com.petrobras.sistam</groupId>
        <artifactId>sistam</artifactId>
        <version>1.1.0</version>
    </parent>
    <artifactId>sistam-desktop</artifactId>
    <packaging>jar</packaging>
    <name>sistam-desktop</name>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.*</include>
                </includes>
            </resource>
            <resource>
                <directory>../sistam-web/src/main/config/local</directory>
                <includes>
                    <include>**/*.properties</include>
                </includes>
            </resource>
            <resource>
                <directory>../sistam-web/src/main/webapp/WEB-INF/resources</directory>
                <includes>
                    <include>applicationContext.xml</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <!--
             COMPILA RELATÃ“RIOS DO JASPER REPORTS DURANTE O BUILD 
            -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jasperreports-maven-plugin</artifactId>
                <version>1.0-beta-2</version>
                <configuration>
                    <outputDirectory>${project.build.outputDirectory}/reports</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>compile-reports</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile-reports</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>net.sf.jasperreports</groupId>
                        <artifactId>jasperreports</artifactId>
                        <version>${jasperreports.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>log4j</groupId>
                        <artifactId>log4j</artifactId>
                        <version>1.2.13</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <archive>
                        <index>true</index>
                        <manifestEntries>
                            <Application-Name>SISTAM</Application-Name>
                            <Permissions>all-permissions</Permissions>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <profiles>
        <profile>
            <id>build-distribution</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <!--  GERA PASTA WEBSTART  -->
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/webstart.xml</descriptor>
                            </descriptors>
                        </configuration>
                        <executions>
                            <execution>
                                <id>gerar-webstart</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <!-- INSERE AS DEPENDENCIAS PARA O JNLP NO JSP -->
                            <execution>
                                <id>inserir-dependencias-jnlp</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <pathconvert pathsep="${line.separator}" property="project-jars">
                                            <path>
                                                <fileset dir="${project.build.directory}/${project.build.finalName}-webstart/lib" erroronmissingdir="true">
                                                    <include name="**/sistam-*.jar"/>
                                                </fileset>
                                            </path>
                                            <mapper type="regexp" from="^.*[/\\]([^/\\]+\.jar)" to="&lt;jar href=&quot;sistam/lib/\1&quot; download=&quot;eager&quot;/&gt;" />
                                        </pathconvert>
                                        <pathconvert pathsep="${line.separator}" property="slib-jars">
                                            <path>
                                                <fileset dir="${project.build.directory}/${project.build.finalName}-webstart/lib" erroronmissingdir="true">
                                                    <exclude name="**/sistam-*.jar"/>
                                                </fileset>
                                            </path>
                                            <mapper type="regexp" from="^.*[/\\]([^/\\]+\.jar)" to="&lt;jar href=&quot;slibs/ptecba/\1&quot; download=&quot;eager&quot;/&gt;" />
                                        </pathconvert>
                                        <echo>jnlp-jars:${project-jars}${line.separator}${slib-jars}&gt;</echo>                                         
                                        <replace file="${project.build.directory}/classes/JNLP-INF/APPLICATION_TEMPLATE.jnlp" token="@@version" value="${project.version}"/>                                        
                                        <replace file="${project.build.directory}/classes/JNLP-INF/APPLICATION_TEMPLATE.jnlp" token="@@jnlp-jars" value="${project-jars}${line.separator}${slib-jars}"/>
                                    </target>
                                </configuration>
                            </execution>
                            
                            <!--  REMOVE XMLS E PROPERTIES DO PACOTE  -->
                            <execution>
                                <id>apagar-resources-desnecessarios</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <phase>prepare-package</phase>
                                <configuration>
                                    <target>
                                        <delete file="${project.build.outputDirectory}/applicationContext.xml"/>
                                        <delete file="${project.build.outputDirectory}/common.properties"/>
                                        <delete dir="${project.build.outputDirectory}/help"/>
                                        <delete dir="${project.build.outputDirectory}/sistam"/>
                                    </target>
                                </configuration>
                            </execution>
                            
                            <!-- COPIAR JAR PARA PACOTE FINAL -->
                            <execution>
                                <id>copiar-jar-pacote-final</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <target>

                                        <copy file="${project.build.directory}/${project.build.finalName}.jar"
                                              tofile="${project.build.directory}/${project.build.finalName}-webstart/${project.build.finalName}.jar" />
                                    </target>
                                </configuration>
                            </execution>
                            
                            <!--  REMOVE JAR DUPLICADO DE DENTRO DA PASTA LIB  -->
                            <execution>
                                <id>apagar-jar-duplicado</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <target>
                                        <delete file="${project.build.directory}/${project.build.finalName}-webstart/lib/${project.build.finalName}.jar"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    
