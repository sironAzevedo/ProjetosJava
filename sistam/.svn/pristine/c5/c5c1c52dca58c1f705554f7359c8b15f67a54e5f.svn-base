<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property resource="sistam/log.properties" />

    <appender name="logfile-app" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <file>${config.applogspath}/sistam/sistam-${config.applogssuffix}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${config.applogspath}/sistam/sistam-${config.applogssuffix}.log.%i</fileNamePattern>
            <maxIndex>${maxfiles}</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${maxfilesize}</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %p [%c] - %m%n</pattern>
        </encoder>
    </appender>

    <appender name="logfile-spring" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <file>${config.applogspath}/sistam/sistam-spring-${config.applogssuffix}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${config.applogspath}/sistam/sistam-spring-${config.applogssuffix}.log.%i</fileNamePattern>
            <maxIndex>${maxfiles}</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${maxfilesize}</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %p [%c] - %m%n</pattern>
        </encoder>
    </appender>
    
            
    <appender name="logfile-job" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <file>${config.applogspath}/sistam/sistam-job-${config.applogssuffix}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${config.applogspath}/sistam/sistam-job-${config.applogssuffix}.log.%i</fileNamePattern>
            <maxIndex>${maxfiles}</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${maxfilesize}</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %p [%c] - %m%n</pattern>
        </encoder>
    </appender>
    
    <appender name="logfile-sql" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <file>${config.applogspath}/sistam/sistam-sql-${config.applogssuffix}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${config.applogspath}/sistam/sistam-sql-${config.applogssuffix}.log.%i</fileNamePattern>
            <maxIndex>${maxfiles}</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${maxfilesize}</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %p [%c] - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="br.com.petrobras.sistam">
        <level value="${severity-app}" />
        <appender-ref ref="logfile-app" />
    </logger>

    <logger name="org.springframework">
        <level value="${severity-spring}" />
        <appender-ref ref="logfile-spring" />
    </logger>

    <logger name="br.com.petrobras.sistam.common.business.JobService" additivity="false">
        <level value="${severity-job}" />
        <appender-ref ref="logfile-job" />
    </logger>
    
    <logger name="br.com.petrobras.sistam.service.impl.JobServiceImpl" additivity="false">
        <level value="${severity-job}" />
        <appender-ref ref="logfile-job" />
    </logger>
    
    <logger name="br.com.petrobras.snarf.invoker" additivity="false">
        <level value="${severity-job}" />
        <appender-ref ref="logfile-job" />
    </logger>

    <logger name="org.hibernate.SQL" additivity="false">
        <level value="${severity-sql}" />
        <appender-ref ref="logfile-sql" />
    </logger>

</configuration>