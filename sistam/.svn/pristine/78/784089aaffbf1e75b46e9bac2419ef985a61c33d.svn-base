<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:aop="http://www.springframework.org/schema/aop" 
       xmlns:tx="http://www.springframework.org/schema/tx" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">

    <import resource="applicationContext.xml"/>
    
    <bean id="propertiesConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
             <value>classpath:test.properties</value>             
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>
    
    <!-- Data Source via Unitils -->
    <bean id="dataSource" class="org.unitils.database.UnitilsDataSourceFactoryBean" />

    <!-- Proxy do datasource com interceptadores -->
    <bean id="dataSourceProxy" class="br.com.petrobras.snarf.spring.datasource.ConfigurableDatasourceProxy">
        <property name="targetDataSource" ref="dataSource"/>
        <property name="interceptors">
            <list>
                <!-- Este interceptor pode é usado para identificar conexões Oracle usando o procedimento set_module -->
                <bean class="br.com.petrobras.snarf.spring.datasource.interceptor.SetModuleConnectionInterceptor">
                    <property name="moduleName" value="Sistam" />
                </bean>
            </list>
        </property>
    </bean>
    
    
    
    <!-- Redefinição do Locale para fora do session scope -->
    <bean id="locale" class="br.com.petrobras.fcorp.i18n.LocaleHolder">
        <property name="locale">
            <bean class="java.util.Locale">
                <constructor-arg value="pt"/>
                <constructor-arg value="BR"/>
            </bean>
        </property>
    </bean>
    
    <bean id="validadorPermissao" class="br.com.petrobras.sistam.service.mock.ValidadorPermissaoMock"/>
    
    <bean id="aspectValidator" class="br.com.petrobras.sistam.service.mock.ValidadorPermissaoMock"/>
    
    <bean id="validadorEmbarcacao" class="br.com.petrobras.sistam.service.mock.EmbarcacaoValidadorMock"/>
    
    <bean id="notesweb2" class="br.com.petrobras.sistam.service.mock.Notesweb2Mock"/>
    
    <bean id="AcessoServiceImpl" class="br.com.petrobras.sistam.service.mock.AcessoServiceMock"/>
    
</beans>
