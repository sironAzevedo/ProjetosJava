@media (max-width:320px){
    header {
        height:30px;
    }
    #logoSistema {
        background-image: url('../imagens/MarcaPainel4.png');
        background-repeat:no-repeat;
        width: 67px;
        height:20px;
        padding: 0px;
        margin: 3px 0px 0px 3px;
    }
    #logoPetrobras {
        width:30px;
        height:30px;
        margin: 3px 3px 0px 0px;   
    }
    .texto .titulo {
        font-size:0.4em;
        width:180px;
    }
    .texto .subtitulo {
        font-size: 0.4em;
        line-height:0.4em;
        width:160px;
    }
     #select-estilo {
        font-size:0.4em;
        line-height:0.4em;
    }
    section.paines table caption {
        font-size:0.4em;
    }
    table thead th{
        font-size:0.4em;
    }
    table tbody tr td{
        font-size:0.4em;
    }
    input, textarea, keygen, select, button, isindex {
        font-size:0.4em;
    }
    select{width:50px;}
    
    .no-phone{display:none;}
    
    .colLp{width:1%;}
    #atracados .colEmbarcacao{width:22%}
    #fundeados .colEmbarcacao,
    #esperados .colEmbarcacao{width:4%}
    .colViagem{width:6%}
    .colEta, .colHoraOficial, .colAtracao{width:16%}
    .colProcedencia{width:3%}
    .colCalado{width:4%}
}

