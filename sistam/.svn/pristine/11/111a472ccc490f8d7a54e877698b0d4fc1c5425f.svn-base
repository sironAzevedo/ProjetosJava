@charset "utf-8";
/* CSS Document */

@import url("principal.css");

#div_pagina_acesso{
	position:absolute;
	margin:0;
	padding:0;
	background-image: url(../imagens/topo.jpg), -moz-linear-gradient(top,  #628eb4,  #b1cbe2);
	background-image: url(../imagens/topo.jpg), -webkit-gradient(linear, left top, left bottom, from(#628eb4), to(#b1cbe2));
	background-repeat:repeat-x;
	width:100%;
	height:100%;
	
}

#conteudo{
	width:780px;
	height:400px;
	margin:0;
	padding:0;
	position:relative;
	margin:0 auto;
	padding:0;
	margin-top:150px;
	background-color:#fff;
	border-radius: 0 0 20px 20px;
}

#topo{
	width:100%;
	position:relative;
	height:100px;
	margin:0;
	padding:0;
}

#div_marca_sistema, #div_marca_petro{
	position:relative;
	float:left;
	margin:20px;
}

#div_marca_sistema{
	width:200px;
	height:60px;
	float:left;
	background-image:url(../imagens/MarcaPainel.png);
	background-repeat:no-repeat;
}


#div_marca_petro{
	width:100px;
	height:30px;
	float:right;
	background-image:url(../imagens/marcaPetrobras2.png);
	background-repeat:no-repeat;
}


h1 {
    font-size: 30px;
    text-align: left;
	color:#114b6c;
	width:90%;
	text-shadow: 2px 2px #fff;
	margin:10px;
	padding:0;
	line-height:30px;
}

p {
    font-size:12px;
    text-align:justify;
	color:#666;
	width:90%;
	margin:10px;
	padding:0;
	line-height:18px;
}