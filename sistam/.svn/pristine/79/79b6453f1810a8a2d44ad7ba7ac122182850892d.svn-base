        <property name="service" ref="sistamService"/>
        <property name="serviceInterface" value="br.com.petrobras.sistam.common.business.JobService"/>
        <property name="authorizedHosts"> 
            <value>$[allowjobfrom],${allowjobfrom}</value>
        </property>
    </bean>-->
    
    <bean name="/SistamService.svlt" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="service" ref="sistamService"/>
        <property name="serviceInterface" value="br.com.petrobras.sistam.common.business.SistamService"/>
    </bean>
        
</beans>
